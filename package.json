{
  "name": "firefund-styleguide",
  "version": "1.0.0-alpha",
  "description": "Firefund live styleguide",
  "private": true,
  "bin": {
    "j": "bin/gzip.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepoly": "assets site/lib",
    "poly": "server site site/**/*",
    "kalei": "npm-run-all --parallel guide watch",
    "guide": "server kalei/ kalei/css/**/*.css",
    "postcss": "postcss --use postcss-partial-import --use postcss-cssnext --use lost",
    "postcss:no-import": "postcss --use postcss-cssnext",
    "postcss-prod": "postcss --use postcss-partial-import --use postcss-cssnext --use lost",
    "make": "make --jobs=4",
    "watch": "nodemon --watch styles --ext .css --exec npm run make",
    "mkdir": "mkdirp",
    "cp": "cp-cli",
    "jon": "echo .f-branding{color:cyan!important;} | j > site/j.gz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Firefund/styleguide.git"
  },
  "author": "dotnetCarpenter <jon.ronnenberg@gmail.com>",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/Firefund/styleguide/issues"
  },
  "homepage": "https://github.com/Firefund/styleguide#readme",
  "dependencies": {
    "@dotnetcarpenter/firefund-cli": "^0.5.8",
    "cp-cli": "^1.0.2",
    "gulp-gzip": "^1.3.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.9.1",
    "npm-run-all": "^1.8.0",
    "postcss-partial-import": "^1.3.0"
  }
}
